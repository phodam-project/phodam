{
  "name": "phodam/phodam",
  "description": "A library to provide populated objects for testing",
  "type": "library",
  "minimum-stability": "stable",
  "license": "BSD-3-Clause",
  "keywords": [
    "unit tests",
    "testing",
    "data objects"
  ],
  "homepage": "https://gitlab.com/phodam/phodam",
  "readme": "README.md",
  "authors": [
    {
      "name": "Andrew Vehlies",
      "email": "avehlies@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Phodam\\": "src/Phodam"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Phodam\\": "test/Phodam"
    }
  },
  "scripts": {
    "lint:phpstan": "phpstan analyse -l 9 src",
    "lint:phpcs": "phpcs --standard=PSR12 src",
    "test:phpunit": "phpunit test",
    "lint": [
      "@lint:phpstan",
      "@lint:phpcs"
    ],
    "test": [
      "@test:phpunit"
    ]
  }
}
