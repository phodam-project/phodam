{
  "name": "phodam/phodam",
  "description": "A library to provide populated objects for testing",
  "type": "library",
  "minimum-stability": "dev",
  "license": "MIT",
  "keywords": [
    "unit tests",
    "testing",
    "data objects"
  ],
  "homepage": "https://github.com/phodam-project/phodam",
  "readme": "README.md",
  "authors": [
    {
      "name": "Andrew Vehlies",
      "email": "avehlies@gmail.com",
      "role": "Owner"
    },
    {
      "name": "Chris Bouchard",
      "email": "chris@upliftinglemma.net",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "../phodam-api"
    }
  ],
  "require": {
    "phodam/phodam-api": "@dev",
    "php": "^8.4",
    "phpdocumentor/reflection-docblock": "^5.3"
  },
  "config": {
    "platform": {
      "php": "8.4"
    },
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^11.0",
    "squizlabs/php_codesniffer": "~3.6",
    "friendsofphp/php-cs-fixer": "^3.32.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-phpunit": "^1.3",
    "sebastian/diff": "^6.0.2"
  },
  "autoload": {
    "psr-4": {
      "Phodam\\": "src/Phodam"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhodamTests\\": "tests",
      "PhodamTests\\Integration\\": "integrationTests",
      "PhodamExamples\\": "examples"
    }
  },
  "scripts": {
    "examples": "phpunit -c examples.phpunit.xml",
    "examples:debug": "XDEBUG_MODE=debug XDEBUG_TRIGGER=1 phpunit -c examples.phpunit.xml",
    "lint:phpcs": "phpcs --standard=PSR12 src",
    "lint:phpcsfixer": "php-cs-fixer fix src --rules=@PSR12 --dry-run --cache-file=build/.php-cs-fixer.cache",
    "lint:phpcsfixer:fix": "php-cs-fixer fix src --rules=@PSR12 --cache-file=build/.php-cs-fixer.cache",
    "lint:phpstan": "phpstan analyse -l 6 src",
    "test:unit": "phpunit -c phpunit.xml",
    "test:integration": "phpunit -c integrationTests.phpunit.xml",
    "test:coverage": "XDEBUG_MODE=coverage phpunit -c coverage.phpunit.xml --coverage-html=build/phpunit",
    "lint": [
      "mkdir -p build",
      "@lint:phpstan",
      "@lint:phpcs",
      "@lint:phpcsfixer"
    ],
    "lint-fix": [
      "@lint:phpcsfixer:fix"
    ],
    "test": [
      "mkdir -p build",
      "@test:unit",
      "@test:integration"
    ],
    "test:debug": [
      "mkdir -p build",
      "XDEBUG_MODE=debug XDEBUG_TRIGGER=1 phpunit -c phpunit.xml"
    ],
    "precommit": [
      "@lint",
      "@test"
    ]
  }
}
